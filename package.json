{
  "private": true,
  "name": "@audora/monorepo",
  "scripts": {
    "dev": "turbo dev",
    "dev:expo": "turbo dev --filter=\"{./apps/expo}...\"",
    "dev:web": "turbo dev --filter=\"{./apps/web}...\"",
    "dev:backend": "turbo dev --filter=\"{./packages/backend}...\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:expo": "turbo build --filter=\"...{./apps/expo}\"",
    "build:web": "turbo build --filter=\"...{./apps/web}\"",
    "build:backend": "turbo build --filter=\"...{./packages/backend}\""
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}