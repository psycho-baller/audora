{
  "private": true,
  "name": "@audora/monorepo",
  "scripts": {
    "dev": "turbo dev",
    "dev:expo": "turbo dev --filter=\"{./apps/expo}...\"",
    "dev:web": "turbo dev --filter=\"{./apps/web}...\"",
    "dev:backend": "turbo dev --filter=\"{./packages/backend}...\"",
    "dev:full-web": "turbo dev --filter=\"{./apps/web}...\" --filter=\"{./packages/backend}...\"",
    "dev:full-expo": "turbo dev --filter=\"{./apps/expo}...\" --filter=\"{./packages/backend}...\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:expo": "turbo build --filter=\"...{./apps/expo}\"",
    "build:web": "turbo build --filter=\"...{./apps/web}\"",
    "build:backend": "turbo build --filter=\"...{./packages/backend}\"",
    "clean": "rm -rf node_modules .turbo apps/web/node_modules apps/web/.turbo apps/expo/node_modules apps/expo/.turbo apps/expo/.expo packages/backend/node_modules packages/backend/.turbo packages/*/node_modules packages/*/.turbo",
    "reset": "pnpm clean && rm -rf pnpm-lock.yaml && pnpm install"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "pnpm": {
    "overrides": {
      "lightningcss": "1.30.1"
    }
  }
}