{
  "private": true,
  "name": "@audora/expo",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "dev": "expo start",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "eas-build-post-install": "pnpm run -w build:expo"
  },
  "dependencies": {
    "@audora/feature-home": "workspace:*",
    "@clerk/clerk-expo": "^2.16.1",
    "@expo/vector-icons": "^15.0.2",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "expo": "~54.0.6",
    "expo-auth-session": "^7.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.8",
    "expo-router": "~6.0.3",
    "expo-secure-store": "^15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-reanimated": "~4.1.0",
    "react-native-web": "~0.21.0"
  },
  "devDependencies": {
    "@audora/eslint-config": "workspace:*",
    "@expo/metro": "^0.1.1",
    "@expo/metro-runtime": "~6.1.2",
    "@testing-library/react-native": "^13.2.0",
    "@types/react": "~19.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.11",
    "typescript": "^5.9.3"
  },
  "eslintConfig": {
    "extends": "@audora/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared",
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "jest": {
    "preset": "jest-expo"
  }
}