{
  "private": true,
  "name": "@audora/expo",
  "main": "expo-router/entry",
  "version": "0.0.1",
  "scripts": {
    "dev": "expo start",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "postinstall": "patch-package",
    "eas-build-post-install": "pnpm run -w build:expo"
  },
  "dependencies": {
    "@audora/backend": "workspace:*",
    "@audora/feature-home": "workspace:*",
    "@audora/tailwind-config": "workspace:*",
    "@clerk/clerk-expo": "^2.16.1",
    "@expo/vector-icons": "^15.0.2",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "convex": "^1.25.0",
    "expo": "~54.0.13",
    "expo-auth-session": "^7.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.9",
    "expo-linking": "^8.0.8",
    "expo-router": "~6.0.12",
    "expo-secure-store": "^15.0.7",
    "expo-share-intent": "^5.0.1",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.8",
    "nativewind": "5.0.0-preview.2",
    "patch-package": "^8.0.1",
    "react": "~19.1.0",
    "react-dom": "~19.1.0",
    "react-native": "~0.81.4",
    "react-native-css": "^3.0.1",
    "react-native-reanimated": "~4.1.3",
    "react-native-safe-area-context": "~5.6.1",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "~0.5.1",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@audora/eslint-config": "workspace:*",
    "@expo/metro": "^0.1.1",
    "@expo/metro-runtime": "~6.1.2",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/react-native": "^13.2.0",
    "@types/react": "~19.1.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  },
  "eslintConfig": {
    "extends": "@audora/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared",
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "jest": {
    "preset": "jest-expo"
  }
}